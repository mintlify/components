{
  "name": "@mintlify/components",
  "version": "0.4.10",
  "description": "Mintlify Headless UI components",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css",
    "./*.css": "./dist/components/*/*.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mintlify/components.git",
    "directory": "components/packages/react"
  },
  "bugs": {
    "url": "https://github.com/mintlify/components/issues"
  },
  "homepage": "https://github.com/mintlify/components#readme",
  "license": "MIT",
  "author": "Mintlify, Inc.",
  "keywords": [
    "react",
    "components",
    "ui",
    "headless",
    "mintlify",
    "design-system",
    "tailwindcss"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "pnpm generate:theme && vite build --watch",
    "build": "pnpm generate:theme && tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:css": "stylelint '**/*.css'",
    "lint:all": "pnpm lint && pnpm lint:css",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate:theme": "tsx scripts/generate-theme-css.ts"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@base-ui-components/react": "1.0.0-beta.6",
    "clsx": "^2.1.1",
    "color": "^5.0.3"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/react-vite": "^10.0.8",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/color": "^3.0.6",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-storybook": "^10.0.8",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^10.0.8",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.1",
    "vite-plugin-dts": "^4.3.0"
  }
}
